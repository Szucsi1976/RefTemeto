@model RefTemeto.Models.Dead

<form method="post" asp-action="DeletePost">
    <input asp-for="DeadId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Elhunyt adatainak törlése</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeadBirthLastName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeadBirthLastName" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeadBirthFirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeadBirthFirstName" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeadMothersName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeadMothersName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeadBirthDate "></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeadBirthDate " disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeadDeathDate "></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeadDeathDate " disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeadCauseOfDeath "></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeadCauseOfDeath  " disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Töröl" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> Vissza </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
