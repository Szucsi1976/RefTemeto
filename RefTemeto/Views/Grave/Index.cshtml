@model IEnumerable<RefTemeto.Models.Grave>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Sírhelyek listája</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Grave" asp-action="Create" class="btn btn-primary">
                Új sírhely felvétele
            </a>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Azonosító
                    </th>
                    <th>
                        Típus
                    </th>
                    <th>
                        Méret
                    </th>
                    <th>
                        Sor
                    </th>
                    <th>
                        Parcella
                    </th>
                    <th>
                        Oldal
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%"> @obj.GraveId        </td>
                    <td width="20%"> @obj.GraveType </td>
                    <td width="20%"> @obj.Size      </td>
                    <td width="10%"> @obj.Row       </td>
                    <td width="10%"> @obj.Parcel    </td>
                    <td width="10%"> @obj.Side      </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Grave" asp-route-Id="@obj.GraveId" asp-action="Edit" class="btn btn-primary mx-2">
                                Szerkeszt
                            </a>
                            <a asp-controller="Grave" asp-route-Id="@obj.GraveId" asp-action="Delete" class="btn btn-danger mx-2">
                                Töröl
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nincsenek rögzített sírhelyek.</p>
    }
</div>