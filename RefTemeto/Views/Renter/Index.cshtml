@model IEnumerable<RefTemeto.Models.Renter>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Sírmegváltók / gondozók listája</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Renter" asp-action="Create" class="btn btn-primary">
                Új sírmegváltó / gondozó felvétele
            </a>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Vezetéknév
                    </th>
                    <th>
                        Keresztnév
                    </th>
                    <th>
                        Település
                    </th>
                    <th>
                        Irányítószám
                    </th>
                    <th>
                        Cím
                    </th>
                    <th>
                        e-mail
                    </th>
                    <th>
                        telefon
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%"> @obj.RenterLastname   </td>
                    <td width="20%"> @obj.RenterFirstname  </td>
                    <td width="10%"> @obj.Settlement.Station  </td>
                    <td width="10%"> @obj.Settlement.PostalCode  </td>
                    <td width="10%"> @obj.RenterAdress    </td>
                    <td width="10%"> @obj.RenterEmail     </td>
                    <td width="10%"> @obj.RenterPhoneNumber     </td>
                    <td class="text-center">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Renter" asp-route-Id="@obj.RenterId" asp-action="Edit" class="btn btn-primary mx-2">
                                Szerkeszt
                            </a>
                            <a asp-controller="Renter" asp-route-Id="@obj.RenterId" asp-action="Delete" class="btn btn-danger mx-2">
                                Töröl
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nincsenek rögzített sírmegváltó személyek.</p>
    }
</div>