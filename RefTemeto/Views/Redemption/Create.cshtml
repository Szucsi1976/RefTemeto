@model RefTemeto.Models.ViewModels.RedemptionVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Sírmegváltás felvétele</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="Redemption.RedemptionGraveId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Redemption.RedemptionGraveId" asp-items="@Model.TypeDropDownGrave" class="form-control">
                            <option selected>-- Válasszon sírhelyet!--</option>
                        </select>
                        <span asp-validation-for="Redemption.RedemptionGraveId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="Redemption.RedemptionRenterId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Redemption.RedemptionRenterId" asp-items="@Model.TypeDropDownRenter" class="form-control">
                            <option selected>-- Válasszon sírmegváltó személyt!--</option>
                        </select>
                        <span asp-validation-for="Redemption.RedemptionRenterId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="Redemption.RedemptionTenderId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Redemption.RedemptionTenderId" asp-items="@Model.TypeDropDownTender" class="form-control">
                            <option selected>-- Válasszon sírgondozó személyt!--</option>
                        </select>
                        <span asp-validation-for="Redemption.RedemptionTenderId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="Redemption.RedemptionDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Redemption.RedemptionDate" class="form-control" />
                        <span asp-validation-for="Redemption.RedemptionDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="Redemption.RedemptionPeriod"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Redemption.RedemptionPeriod" class="form-control" />
                        <span asp-validation-for="Redemption.RedemptionPeriod" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Készít" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> Vissza </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}