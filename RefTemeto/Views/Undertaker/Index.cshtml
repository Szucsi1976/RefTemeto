@model IEnumerable<RefTemeto.Models.Undertaker>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">A temetkezési vállalkozások listája</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-controller="Undertaker" asp-action="Create" class="btn btn-primary">
                Új temetkezési vállalat bejegyzése
            </a>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width: 70%">
            <thead>
                <tr>
                    <th>
                        Temetkezési vállalat megnevezése
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="40%"> @obj.UndertakerName     </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Undertaker" asp-route-Id="@obj.UndertakerId" asp-action="Edit" class="btn btn-primary mx-2">
                                Szerkeszt
                            </a>
                            <a asp-controller="Undertaker" asp-route-Id="@obj.UndertakerId" asp-action="Delete" class="btn btn-danger mx-2">
                                Töröl
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nincsenek megjeleníthető adatok.</p>
    }
</div>