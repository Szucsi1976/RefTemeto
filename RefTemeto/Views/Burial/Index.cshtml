@model IEnumerable<RefTemeto.Models.Burial>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Temetések listája</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Burial" asp-action="Create" class="btn btn-primary">
                Új temetés kiírása
            </a>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Azonosító
                    </th>
                    <th>
                        Temettető neve (magán vagy jogi személy)
                    </th>
                    <th>
                        Temetés dátuma
                    </th>
                    <th>
                        Temetkezési vállalat
                    </th>
                    <th>
                        Temetkezés módja
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%"> @obj.FuneralId                  </td>
                    <td width="20%"> @obj.FuneralName                </td>
                    <td width="20%"> @obj.FuneralDateTime            </td>
                    <td width="10%"> @obj.Undertaker.UndertakerName  </td>
                    <td width="10%"> @obj.DeathBurialMethod          </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Burial" asp-route-Id="@obj.FuneralId" asp-action="Edit" class="btn btn-primary mx-2">
                                Szerkeszt
                            </a>
                            <a asp-controller="Burial" asp-route-Id="@obj.FuneralId" asp-action="Delete" class="btn btn-danger mx-2">
                                Töröl
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nincsenek rögzített temetések.</p>
    }
</div>